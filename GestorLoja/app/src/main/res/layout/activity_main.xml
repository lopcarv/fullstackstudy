<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestor de Loja"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnVendas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vendas"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnEstoque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estoque"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnFinanceiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Financeiro"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnRH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recursos Humanos"
        android:backgroundTint="#9C27B0"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnRelatorios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RelatÃ³rios"
        android:backgroundTint="#607D8B"
        android:textColor="#FFFFFF"/>
</LinearLayout>
